<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="rahulstech.jfx.balancesheet.controller.CategoryBudgetChartController" spacing="10">
    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>
    <HBox VBox.vgrow="NEVER" spacing="10" >
        <HBox HBox.hgrow="ALWAYS" spacing="10">
            <VBox spacing="10" alignment="CENTER">
                <Label text="Date Start" minWidth="120"/>
                <DatePicker fx:id="startDatePicker"/>
            </VBox>

            <VBox spacing="10" alignment="CENTER">
                <Label text="Date End" minWidth="120"/>
                <DatePicker fx:id="endDatePicker"/>
            </VBox>
        </HBox>
        <Button HBox.hgrow="NEVER" alignment="BOTTOM_RIGHT" text="Add Category" onAction="#handleAddCategoryButtonClick" >
            <graphic>
                <FontIcon iconLiteral="mdi-plus"/>
            </graphic>
        </Button>
        <Button HBox.hgrow="NEVER" alignment="BOTTOM_RIGHT" text="Create Chart" onAction="#handleCreateChartButtonClick" >
            <graphic>
                <FontIcon iconLiteral="mdi-chart-bar"/>
            </graphic>
        </Button>
    </HBox>


    <ScrollPane prefHeight="150" fitToWidth="true" hbarPolicy="NEVER">
        <FlowPane style="-fx-padding: 10;" fx:id="selectedCategoriesPanel" hgap="10" vgap="10" />
    </ScrollPane>

    <BarChart fx:id="categoryBudgetChart">
        <xAxis>
            <CategoryAxis label="Category"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Amount"/>
        </yAxis>
    </BarChart>
</VBox>
