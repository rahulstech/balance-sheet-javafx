<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="rahulstech.jfx.balancesheet.controller.CategoryController" spacing="10">
    <HBox spacing="10" style="-fx-padding: 12px 10px">
        <Label text="Name:"/>
        <TextField fx:id="nameField" prefWidth="220" />
        <Button text="Add Category" onAction="#handleAddCategory"/>
        <Button text="Refresh" onAction="#handleRefresh"/>
    </HBox>
    <ListView fx:id="categoryList"/>
</VBox>
